                                    </div>
                                </div>
                            </li>
                            <li class="nav-item active font-weight-bold">
                                <div class="dropdown show" id="products-dropdown">
                                    <a class="nav-link active font-weight-bold dropdown-toggle"
                                       href="#"
                                       id="productDropDown"
                                       data-toggle="dropdown"
                                       aria-haspopup="true"
                                       aria-expanded="false">
                                        Профил
                                    </a>

                                    <div class="dropdown-menu " aria-labelledby="productDropDown">
                                        <a class="dropdown-item" href="/Order/Cart">Количка</a>
                                        <a class="dropdown-item" href="/Receipt/Profile">Моите поръчки</a>
                                        <a class="dropdown-item" href="/Administration/Receipt/All">Всички поръчки</a>
                                        <a class="dropdown-item" href="/Administration/Admin/Create">Регистрирай админ</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="/Identity/Account/Logout">Изход</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                    else if (this.User.Identity.IsAuthenticated && this.User.IsInRole("User"))
                    {
                        <ul class="navbar-nav ml-auto my-2 my-lg-0 font-weight-bold">
                            <li class="nav-item active font-weight-bold">
                                <div class="dropdown show" id="products-dropdown">
                                    <a class="nav-link active font-weight-bold dropdown-toggle"
                                       href="#"
                                       id="productDropDown"
                                       data-toggle="dropdown"
                                       aria-haspopup="true"
                                       aria-expanded="false">
                                        Профил
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="productDropDown">
                                        <a class="dropdown-item" href="/Order/Cart">Количка</a>
                                        <a class="dropdown-item" href="/Receipt/Profile">Моите поръчки</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="/Identity/Account/Logout">Изход</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ml-auto my-2 my-lg-0 font-weight-bold">
                            <li class="nav-item active font-weight-bold">
                                <a class="nav-link" href="/Identity/Account/Login">Вход</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/Identity/Account/Register">Регистрация</a>
                            </li>
                        </ul>
                    }
                </div>
            </nav>
        </header>

        <div class="container">
            <partial name="_CookieConsentPartial" />
            <main role="main" class="pb-3">
                @this.RenderBody()
            </main>
        </div>

        <footer class="navbar-dark bg-primary pt-4">
            <div class="container-fluid text-center text-md-left">
                <div class="row text-white">
                    <div class="col-md-4 mt-md-0 mt-3">
                        <h5 class="text-uppercase text-warning text-left"><a class="text-uppercase text-warning text-left" href="/Home/About">За нас</a></h5>
