                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto font-weight-bold">
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Начало <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/News/All">Новини</a>
                        </li>
                        <li class="nav-item active">
                            <div class="dropdown show" id="products-dropdown">
                                <a class="nav-link active font-weight-bold dropdown-toggle"
                                   href="#"
                                   id="productDropDown"
                                   data-toggle="dropdown"
                                   aria-haspopup="true"
                                   aria-expanded="false">
                                    Клубът
                                </a>

                                <div class="dropdown-menu " aria-labelledby="productDropDown">
                                    <a class="dropdown-item" href="/Player/All">Отбор</a>
                                    <a class="dropdown-item" href="/LeagueTable/Ranking">Класиране</a>
                                    <a class="dropdown-item" href="/MatchSchedule/All">Програма</a>
                                    <a class="dropdown-item" href="/Home/About">За нас</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/Gallery/All">Галерия</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/Product/All">Магазин</a>
                        </li>
                    </ul>
                    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                    {
                        <ul class="navbar-nav ml-auto my-2 my-lg-0 font-weight-bold">
                            <li class="nav-item active font-weight-bold">
                                <div class="dropdown show" id="products-dropdown">
                                    <a class="nav-link active font-weight-bold dropdown-toggle"
                                       href="#"
                                       id="productDropDown"
                                       data-toggle="dropdown"
                                       aria-haspopup="true"
                                       aria-expanded="false">
                                        Създай
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="productDropDown">
                                        <a class="dropdown-item" href="/Administration/News/Create">Новини</a>
                                        <a class="dropdown-item" href="/Administration/News/Category/Create">Категория новини</a>
                                        <a class="dropdown-item" href="/Administration/Product/Create">Продукт</a>
                                        <a class="dropdown-item" href="/Administration/Product/Type/Create">Тип Продукт</a>
