@model StrumskaSlava.Web.ViewModels.News.Details.NewsDetailsViewModel

@{
    var title = Model.Title;
    var category = ViewData["category"];

    ViewData["Title"] = title;
}
    <div class="mt-3">
        <div id="post-header" class="page-header">
            <div class=".post-img">
                <img class="img-fluid mx-auto d-block img-thumbnail post-img" src="@Model.Picture" alt="">
            </div>
            <div class="container mt-3">
                <div class="row">
                    <div class="col-md-10">
                        <div class="post-meta col-md-6 text-right">
                            <a class="post-category " href="category.html">@Model.NewsCategoryName</a>
                            <span class="post-date">@Model.CreatedOn.ToString("HH:MM dd/MM/yyyy")</span>
                        </div>
                        <h1 class="mt-3 text-center">@title</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-10">
                <div class="section-row sticky-container">
                    <div class="">
                        <p>@Model.Content</p>
                    </div>
                    <div >
                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                        {
                            <a href="/Administration/News/Edit/@Model.Id" class="btn btn-primary">Редактиране</a>
                            <a href="/Administration/News/Delete/@Model.Id" class="btn btn-danger">Изтриване</a>
                        }
                    </div>
                </div>

                
            </div>
        </div>
    </div>

