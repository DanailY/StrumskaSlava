@model StrumskaSlava.Web.BindingModels.News.NewsCategoryCreateBindingModel

@{
    ViewData["Title"] = "Категория Новини";
}


<form class="form border-primary-5 rounded p-1 w-25 mx-auto mt-3" asp-action="/Administration/News/Category/Create">
    <h1 class="h3 mb-3 font-weight-normal">Категория Новини</h1>
    <label asp-for="Name" class="sr-only">Name</label>
    <input asp-for="Name" type="text" id="inputUsername" class="form-control" placeholder="Категория Новини" required autofocus>
    <span asp-validation-for="Name" class="text-danger"></span>

    <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Създай</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
