@model StrumskaSlava.Web.BindingModels.AdminPanel.AdminCreateBindingModel

@{
    ViewData["Title"] = "Регистрация на админ.";
}

    <form class="form border-primary-4 rounded p-3 w-25 mx-auto mt-3" asp-action="/Administration/Admin/Create">
        <img class="mb-4" src="~/Images/StrumskaSlava.png" alt="" width="72" height="72">
        <h1 class="h4 mb-3 font-weight-normal">Регистрация на админ.</h1>
        <div class="form-group mx-auto">
            <div>
                <label asp-for="FirstName" class="sr-only">FirstName</label>
            </div>
            <input asp-for="FirstName" type="text" id="firstName" class="form-control" placeholder="Име" required autofocus>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto">
            <div>
                <label asp-for="LastName" class="sr-only">LastName</label>
            </div>
            <input asp-for="LastName" type="text" id="lastName" class="form-control" placeholder="Фамилия" required autofocus>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto">
            <div>
                <label asp-for="Username" class="sr-only">Username</label>
            </div>
            <input asp-for="Username" type="text" id="username" class="form-control" placeholder="Потребителско име" required autofocus>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto">
            <div>
                <label asp-for="Email" class="sr-only">Email</label>
            </div>
            <input asp-for="Email" type="email" id="email" class="form-control" placeholder="Имейл" required autofocus>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto">
            <div>
                <label asp-for="Password" class="sr-only">Password</label>
            </div>
            <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Парола" required>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto">
            <div>
                <label asp-for="ConfirmPassword" class="sr-only">ConfirmPassword</label>
            </div>
            <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="form-control" placeholder="Потвърди парола" required>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Регистрация</button>
        </div>
    </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
