@model StrumskaSlava.Web.BindingModels.Gallery.GalleryCreateBindingModel

@{
    ViewData["Title"] = "Създаване на Галерия";
}

<div class="container-fluid">
    <h1 class="text-center mt-5 ">Създаване на Галерия</h1>
    <hr style="height: 2px;" class="w-50">
    <form class="w-50 mx-auto" method="post" asp-action="/Administration/Gallery/Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Име на Галерията</label>
            <input type="text" class="form-control text-primary" id="name" placeholder="Име на Галерията..." name="name">
        </div>
        <hr />
        <div id="images">
            <div class="image-row d-flex justify-content-start">

                <div class="image rounded mt-1 ml-5">
                    <input type="file" class="image-upload" multiple="multiple" name="pictures"> 
                </div>
            </div>
        </div>
        <hr />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Създай</button>
        </div>
    </form>
    <form asp-action="/" method="post"></form>
</div>

@section Scripts {
    <script src="~/js/script.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
