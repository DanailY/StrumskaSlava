@model StrumskaSlava.Web.ViewModels.Gallery.Delete.GalleryDeleteViewModel

@{
    ViewData["Title"] = "Изтриване на Галерия";
}

    <div class="container-fluid">
        <h1 class="text-center mt-5 ">Изтриване на Галерия - @Model.Name</h1>
        <hr style="height: 2px;" class="w-50">
        <form class="w-50 mx-auto" method="post" asp-action="/Administration/Gallery/Delete" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Име на Галерията</label>
                <input type="text" asp-for="Name" class="form-control text-primary" id="name" placeholder="Име на Галерията..." name="name" disabled>
            </div>
            <hr />
            <div id="images">
                <div class="image-row d-flex justify-content-start">

                    <div class="image rounded mt-1 ml-5">
                        <input type="file" class="image-upload" multiple="multiple" name="pictures" disabled>
                    </div>
                </div>
            </div>
            <hr />
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Изтрий</button>
            </div>
        </form>
        <form asp-action="/" method="post"></form>
    </div>
