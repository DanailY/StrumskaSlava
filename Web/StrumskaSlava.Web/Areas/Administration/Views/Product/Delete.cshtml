@using StrumskaSlava.Web.ViewModels.Product.Delete
@model StrumskaSlava.Web.ViewModels.Product.Delete.ProductDeleteViewModel

@{
    ViewData["Title"] = "Изтриване";
}

<h1 class="text-dark font-weight-bold text-center p-3 w-60 mx-auto rounded mt-3">Изтриване Продукт</h1>

<form class="form border-primary-5 rounded p-3 w-60 mx-auto mt-auto" asp-action="/Administration/Product/Delete" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <hr class="w-95" />
    <div id="title-and-content-holder" class="d-flex justify-content-between">
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Name" class="text-primary">Продукт</label>
            </div>
            <input asp-for="Name" type="text" id="title" class="form-control" placeholder="Продукт" required autofocus disabled>
        </div>
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Picture" class="text-primary">Снимка</label>
            </div>
            <input type="file"
                   class="form-control-file text-primary text-center"
                   id="picture"
                   placeholder="Снимка..."
                   asp-for="Picture" disabled>
        </div>
    </div>
    <div id="name-and-price-holder" class="d-flex justify-content-between">
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Price" class="text-primary">Price</label>
            </div>
            <input type="number"
                   step="0.01"
                   class="form-control text-primary text-center"
                   id="price"
                   placeholder="Price..."
                   asp-for="Price" disabled>
        </div>
    </div>

    <div id="name-and-price-holder" class="d-flex justify-content-between">
        <div class="form-group mx-auto w-95">
            <div class="d-flex justify-content-center">
                <label asp-for="Description" class="text-primary">Описание</label>
            </div>
            <textarea asp-for="Description" type="text" id="description" class="form-control col-md-12" rows="7" placeholder="Описание" required autofocus disabled></textarea>
        </div>

    </div>

    <div class="form-group mx-auto w-45">
        <div class="d-flex justify-content-center">
            <label asp-for="ProductType" class="text-primary">Тип Продукт</label>
        </div>
        <select class="form-control text-primary" id="type" disabled>
            @foreach (var type in (IEnumerable<ProductDeleteProductTypeViewModel>)this.ViewData["types"])
            {
                @if (type.Name == Model.ProductType.Name)
                {
                    <option value="@type.Name" selected>@type.Name</option>
                }
                else
                {
                    <option value="@type.Name">@type.Name</option>
                }
            }
        </select>
    </div>


    <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-lg btn-primary btn-block mt-3 w-45" type="submit">Изтрий</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}