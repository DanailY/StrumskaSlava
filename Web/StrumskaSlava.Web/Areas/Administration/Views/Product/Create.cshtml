@using StrumskaSlava.Web.ViewModels.Product.Create
@model StrumskaSlava.Web.BindingModels.Product.Create.ProductCreateBindingModel

@{
    ViewData["Title"] = "Създаване на Продукт";
}

<h1 class="text-dark font-weight-bold text-center p-3 w-60 mx-auto rounded mt-3">Създай Продукт</h1>

<form class="form border-primary-5 rounded p-3 w-60 mx-auto mt-auto" asp-action="/Administration/Product/Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <hr class="w-95" />
    <div id="title-and-content-holder" class="d-flex justify-content-between">
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Name" class="text-primary">Продукт</label>
            </div>
            <input asp-for="Name" type="text" id="title" class="form-control" placeholder="Продукт" required autofocus>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Picture" class="text-primary">Снимка</label>
            </div>
            <input type="file"
                   class="form-control-file text-primary text-center"
                   id="picture"
                   placeholder="Снимка..."
                   asp-for="Picture">
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
    </div>
    <div id="name-and-price-holder" class="d-flex justify-content-between">
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Price" class="text-primary">Цена</label>
            </div>
            <input type="number"
                   step="0.01"
                   class="form-control text-primary text-center"
                   id="price"
                   placeholder="Цена..."
                   asp-for="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div id="name-and-price-holder" class="d-flex justify-content-between">
        <div class="form-group mx-auto w-95">
            <div class="d-flex justify-content-center">
                <label asp-for="Description" class="text-primary">Описание</label>
            </div>
            <textarea asp-for="Description" type="text" id="description" class="form-control col-md-12" rows="7" placeholder="Описание" required autofocus></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group mx-auto w-45">
        <hr class="w-95" />
        <div class="d-flex justify-content-center">
            <label asp-for="ProductType" class="text-primary">Тип Продукт</label>
        </div>
        <select class="form-control text-primary" id="category" asp-for="ProductType">
            <option selected disabled>--- Иберете Категория ---</option>
            @foreach (var category in ((IEnumerable<ProductCreateProductTypeViewModel>)this.ViewData["types"]))
            {
                <option value="@category.Name">@category.Name</option>
            }
        </select>
        <span asp-validation-for="ProductType" class="text-danger"></span>
    </div>


    <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-lg btn-primary btn-block mt-3 w-45" type="submit">Създай</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
