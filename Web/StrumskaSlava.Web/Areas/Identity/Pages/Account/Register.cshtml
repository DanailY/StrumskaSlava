@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<form class="form border-primary-4 rounded p-3 w-25 mx-auto mt-3" asp-action="/Identity/Account/Register">
    <img class="mb-4" src="~/Images/StrumskaSlava.png" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Регистрция</h1>
    <div class="form-group mx-auto">
        <div>
            <label asp-for="Input.FirstName" class="sr-only">FirstName</label>
        </div>
        <input asp-for="Input.FirstName" type="text" id="firstName" class="form-control" placeholder="Име" required autofocus>
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div>
            <label asp-for="Input.LastName" class="sr-only">LastName</label>
        </div>
        <input asp-for="Input.LastName" type="text" id="lastName" class="form-control" placeholder="Фамилия" required autofocus>
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div>
            <label asp-for="Input.Username" class="sr-only">Username</label>
        </div>
        <input asp-for="Input.Username" type="text" id="username" class="form-control" placeholder="Потребителско име" required autofocus>
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div>
            <label asp-for="Input.Email" class="sr-only">Email</label>
        </div>
        <input asp-for="Input.Email" type="email" id="email" class="form-control" placeholder="Имейл" required autofocus>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div>
            <label asp-for="Input.Password" class="sr-only">Password</label>
        </div>
        <input asp-for="Input.Password" type="password" id="password" class="form-control" placeholder="Парола" required>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div>
            <label asp-for="Input.ConfirmPassword" class="sr-only">ConfirmPassword</label>
        </div>
        <input asp-for="Input.ConfirmPassword" type="password" id="confirmPassword" class="form-control" placeholder="Потвърди парола" required>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Регистрация</button>
    </div>
</form>